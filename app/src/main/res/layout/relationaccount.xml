<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/useraccountlayout"
    android:paddingTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/roundedrect"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_alignParentStart="true"
                android:text="Your Account"
                android:textSize="18dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/up_36x36"
                android:visibility="gone"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/userdatasummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/exchangeamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="₹1.2L"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/totalexchanges"
                    android:textColor="@color/darkwhite"
                    android:textSize="18dp"
                    android:minLines="2"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/upcomingpaybacks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="₹129"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/upcomingpaybacks"
                    android:textColor="@color/darkwhite"
                    android:textSize="18dp"
                    android:minLines="2"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/upcomingdues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="₹4632"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/upcomingdues"
                    android:textColor="@color/darkwhite"
                    android:textSize="18dp"
                    android:minLines="2"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/userdatadetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >
        <TableLayout
            android:id="@+id/usertable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedrect"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_column="1">
                    <de.hdodenhof.circleimageview.CircleImageView
                       android:id="@+id/userphoto"
                        android:paddingLeft="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/user1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_column="2"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/replyname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Re: Pragathi"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            />
                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harshada"
                            android:textSize="15dp"
                            />
                        <TextView
                            android:id="@+id/toyou"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="to You"
                            android:textSize="10dp"
                            android:textColor="@color/darkwhite"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/userdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22 Aug"
                        android:textColor="@color/darkwhite"
                        android:paddingTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12dp"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="75dp"
                    android:orientation="horizontal"
                    android:layout_column="3"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/useramount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹90"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/darkwhite"
                        android:textSize="15dp"
                        />
                </RelativeLayout>


            </TableRow>
            <TableRow
                android:id="@+id/floatingbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </TableRow>

        </TableLayout>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_anchor="@id/usertable"
        app:layout_anchorGravity="right|bottom|end"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</LinearLayout>