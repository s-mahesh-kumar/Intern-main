<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/useraccountlayout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.2"
    android:background="@drawable/roundedrect"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_alignParentStart="true"
            android:text="Your Account"
            android:textSize="18dp"
        />
            <ImageView
                android:id="@+id/btnaccountup"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/up_36x36"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/userdatasummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/exchangeamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="₹1.2L"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/totalexchanges"
                    android:textColor="@color/darkwhite"
                    android:textSize="18dp"
                    android:minLines="2"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/upcomingpaybacks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="₹129"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/upcomingpaybacks"
                    android:textColor="@color/darkwhite"
                    android:textSize="18dp"
                    android:minLines="2"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/upcomingdues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="₹4632"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/upcomingdues"
                    android:textColor="@color/darkwhite"
                    android:textSize="18dp"
                    android:minLines="2"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
   <LinearLayout
       android:id="@+id/userdatadetails"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingTop="10dp"
       android:orientation="horizontal"
       >
       <TableLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TableRow>
               <LinearLayout
                   android:layout_width="150dp"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_column="1">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:layout_marginBottom="20dp"
                       android:layout_height="wrap_content">
                        <TextView
                        android:id="@+id/btnreturn"
                       android:text="@string/returnunderline"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textStyle="bold"
                       android:layout_marginRight="10dp"
                       android:textColor="@color/black"
                       android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/btnreceived"
                           android:text="@string/receive"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="18dp"/>
                   </LinearLayout>
                   <!-- Returned -->
                   <LinearLayout
                       android:id="@+id/returnlayout"
                       android:layout_width="match_parent"
                       android:orientation="vertical"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/return_returned"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/returned"
                           android:layout_marginBottom="5dp"
                           android:textColor="@color/darkwhite"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="₹38,139"
                           android:textStyle="bold"
                           android:textSize="18dp"
                           android:textColor="@color/black"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="of ₹42,812"
                           android:textColor="@color/darkwhite"
                           />
                       <!-- Upcoming -->
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="20dp"
                           android:text="@string/upcoming"
                           android:layout_marginBottom="5dp"
                           android:textColor="@color/darkwhite"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="₹4,632"
                           android:textStyle="bold"
                           android:textSize="18dp"
                           android:textColor="@color/black"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="of ₹42,812"
                           android:textColor="@color/darkwhite"
                           />
                   </LinearLayout>

                   <!-- Received -->
                   <LinearLayout
                       android:id="@+id/receiverlayout"
                       android:layout_width="match_parent"
                       android:orientation="vertical"
                       android:visibility="gone"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/received_returned"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/received"
                           android:layout_marginBottom="5dp"
                           android:textColor="@color/darkwhite"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="₹29,256"
                           android:textStyle="bold"
                           android:textSize="18dp"
                           android:textColor="@color/black"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="of ₹30,475"
                           android:textColor="@color/darkwhite"
                           />
                       <!-- Upcoming -->
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="20dp"
                           android:text="@string/upcoming"
                           android:layout_marginBottom="5dp"
                           android:textColor="@color/darkwhite"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="₹1,219"
                           android:textStyle="bold"
                           android:textSize="18dp"
                           android:textColor="@color/black"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="of ₹30,475"
                           android:textColor="@color/darkwhite"
                           />
                   </LinearLayout>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_column="2">
                   <lecho.lib.hellocharts.view.PieChartView
                       android:id="@+id/chart"
                       android:layout_marginTop="5dp"
                       android:layout_width="150dp"
                       android:layout_height="150dp" />
               </LinearLayout>

           </TableRow>
           <TableRow
               android:id="@+id/rownext10days"
               android:visibility="gone"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_column="1"
                   >
                   <!-- next 10 days -->
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20dp"
                       android:text="Next 10 days"
                       android:textColor="@color/darkwhite" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="93%"
                       android:textColor="@color/black" />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_column="2"
                   >
                   <!-- time until 100% -->
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20dp"
                       android:text="Time until 100%"
                       android:textColor="@color/darkwhite" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:text="128 days"
                       android:textColor="@color/black" />

               </LinearLayout>

           </TableRow>
           <TableRow>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_column="1"
                   >
               <!-- Friends -->
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:text="@string/friends"
                   android:textColor="@color/darkwhite"
                   />
               <include layout="@layout/overlayimages"/>
               </LinearLayout>

           </TableRow>

       </TableLayout>

   </LinearLayout>
</LinearLayout>