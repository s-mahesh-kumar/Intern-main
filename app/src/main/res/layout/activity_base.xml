<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/screentheme"

    tools:context=".BaseActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        android:background="@color/screentheme"
        app:popupTheme="@style/Theme.Intern.PopupOverlay" />

    <include layout="@layout/currentuserlayout" />
    <include layout="@layout/freqcontact" />
    <include layout="@layout/recentusers" />
    <include layout="@layout/accountdetails" />


</LinearLayout>